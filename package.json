{
  "name": "chess-academy-management-system",
  "version": "1.0.0",
  "description": "A comprehensive MERN stack chess academy management system",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install-server": "cd backend && npm install",
    "install-client": "cd frontend && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "create-admin": "cd backend && npm run create-admin",
    "heroku-postbuild": "npm run install-all && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "chess",
    "academy",
    "management",
    "mern",
    "react",
    "node",
    "express",
    "mongodb"
  ],
  "author": "Chess Academy Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/chess-academy-management-system.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
